PORT=3001

# Streamlabs OAuth (recommended, for Socket API token)
STREAMLABS_CLIENT_ID=PASTE_HERE
STREAMLABS_CLIENT_SECRET=PASTE_HERE
STREAMLABS_REDIRECT_URI=https://your-domain.example/auth/streamlabs/callback
STREAMLABS_SCOPES=socket.token
STREAMLABS_TOKEN_PATH=/app/data/streamlabs.json

# Optional: if you already have a Socket API token
STREAMLABS_SOCKET_TOKEN=

# Kick channel name (bez @)
KICK_CHANNEL=twoj_channel

# Game tuning
BOSS_MAX_HP=1500
CHAT_ATTACK_DAMAGE=5
FOLLOW_DAMAGE=20
SUB_DAMAGE=150

# Donations: dmg = amount * DONATE_DMG_MULT (np. 10 PLN => 100 dmg przy MULT=10)
DONATE_DMG_MULT=10

# Cooldowns (ms)
CHAT_ATTACK_COOLDOWN_MS=5000

# Chaos wheel: donate >= threshold -> random event
CHAOS_ENABLED=true
CHAOS_DONATE_THRESHOLD=10

# Optional: allow running without Kick integration
KICK_ENABLED=true
# Optional: if Kick API is blocked, set chatroom id manually
KICK_CHATROOM_ID=

# Cloudbot → webhook security (MUSI być tajne)
CLOUDBOT_WEBHOOK_SECRET=ZMIEN_TO_NA_DLUGI_LOSOWY_STRING

# Admin (Ty)
ADMIN_USERNAME=YOUR_STREAMER_NAME

# Cloudflare Tunnel
TUNNEL_TOKEN=PASTE_HERE
