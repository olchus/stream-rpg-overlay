PORT=3001

# Streamlabs OAuth (recommended, for Socket API token)
STREAMLABS_CLIENT_ID=PASTE_HERE
STREAMLABS_CLIENT_SECRET=PASTE_HERE
STREAMLABS_REDIRECT_URI=https://your-domain.example/auth/streamlabs/callback
STREAMLABS_SCOPES=socket.token
STREAMLABS_TOKEN_PATH=/app/data/streamlabs.json

# Optional: if you already have a Socket API token
STREAMLABS_SOCKET_TOKEN=

# Game tuning
BOSS_MAX_HP=1500
CHAT_ATTACK_DAMAGE=5
FOLLOW_DAMAGE=20
SUB_DAMAGE=150
SKILL_START=1
SKILL_TRY_PER_ATTACK=1
SKILL_BASE_TRIES=40
SKILL_GROWTH=1.16

# Donations: dmg = amount * DONATE_DMG_MULT (e.g. 10 PLN => 100 dmg at MULT=10)
DONATE_DMG_MULT=2.5

# Cooldowns (ms)
CHAT_ATTACK_COOLDOWN_MS=60000
CHAT_HEAL_COOLDOWN_MS=120000

# Chaos wheel: donate >= threshold -> random event
CHAOS_ENABLED=true
CHAOS_DONATE_THRESHOLD=10
# Optional URL called by `!makechaos` / `!maybechaos` (same CMD_WEBHOOK_SECRET in `x-cmd-secret`)
CHAOS_TASK_WEBHOOK_URL=

# n8n -> command API security (must stay secret)
CMD_WEBHOOK_SECRET=change_me_long_random

# Admin
ADMIN_USERNAME=olcha_str
ADMIN_TOKEN=change_me

# Cloudflare Tunnel
TUNNEL_TOKEN=PASTE_HERE

# Tipply webhook
TIPPLY_WEBHOOK_ENABLED=true
TIPPLY_WEBHOOK_PATH=/api/tipply
TIPPLY_WEBHOOK_HEADER=x-tipply-secret
TIPPLY_WEBHOOK_SECRET=
TIPPLY_AMOUNT_FIELD=amount
TIPPLY_AMOUNT_IN_GROSZ=false
TIPPLY_AMOUNT_SCALE=
TIPPLY_NAME_FIELD=payer_name
TIPPLY_CURRENCY_FIELD=currency
TIPPLY_EXPECT_CURRENCY=PLN

# Tipply goal widget (polling, public API)
TIPPLY_GOAL_ENABLED=false
TIPPLY_GOAL_API_URL=https://tipply.pl/api/widget/goal/GOAL_ID/WIDGET_ID
TIPPLY_GOAL_POLL_MS=15000
TIPPLY_GOAL_AMOUNT_PATH=stats.amount
TIPPLY_GOAL_INITIAL_PATH=config.initial_value
TIPPLY_GOAL_INCLUDE_INITIAL=true
TIPPLY_GOAL_IN_GROSZ=true
TIPPLY_GOAL_SCALE=
TIPPLY_GOAL_USER=donator
